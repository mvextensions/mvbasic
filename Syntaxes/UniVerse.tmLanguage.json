{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MVON# BASIC",
	"patterns": [
		{
			"match": "'.*?'|\".*?\"|\\\\.*?\\\\",
			"name": "string.other.quoted-or-unquoted.mvon"
		},
		{
			"match": "^\\s*([\\w.]+:(?!=)|[0-9.]+)",
			"name": "string.other.quoted-or-unquoted.mvon"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mvon",
					"match": "(?i)(?<![\\w\\$\\.])(ABORT|AND|BEGIN CASE|BEGIN TRANSACTION|BREAK|BSCAN|BY|CALL|CALLING|CAPTURING|CASE|CHAIN|CHANGE|CLEAR|CLEARCOMMON|CLEARDATA|CLEARFILE|CLEARINPUT|CLEARPROMPTS|CLEARSELECT|CLOSE|CLOSE.SOCKET|CLOSESEQ|COM|COMMIT|COMMON|CONTINUE|CONVERT|CREATE|CRT|CSHARP|DATA|DEBUG|DECLARE|DEFFUN|DEL|DELETE|DELETELIST|DELETEU|DIM|DIMENSION|DISPLAY|DO|ECHO|ELSE|END|END CASE|END TRANSACTION|EQU|EQUATE|ERROR|EXECUTE|EXIT|FILELOCK|FILEUNLOCK|FIND|FINDSTR|FLUSH|FOOTING|FOR|FORMLIST|FROM|FUNCTION|GET|GETCWD|GETLIST|GO|GOSUB|GOTO|HEADING|HEADINGE|HEADINGN|HUSH|IF|INCLUDE|\\$INCLUDE|INPUT|INPUTCLEAR|INPUTIF|INS|LET|LOCATE|LOCK|LOCKED|LOOP|MAT|MATBUILD|MATCH|MATCHES|MATPARSE|MATREAD|MATREADL|MATREADU|MATWRITE|MATWRITEU|NAP|NEXT|NOBUF|NULL|OFF|OPEN|OPENPATH|OPENSEQ|OR|PAGE|PASSLIST|PCPERFORM|PEEKNEXT|PERFORM|PRECISION|PRINT|PRINTER|PRINTERR|PROCREAD|PROCWRITE|PROGRAM|PROMPT|RANDOMIZE|READ|READBLK|READL|READLIST|READNEXT|READSELECT|READSEQ|READU|READV|READVL|READVU|RECORDLOCK|RECORDLOCKL|RECORDLOCKU|RELEASE|REMOVE|REPEAT|RESET|RETURN|RETURNING|ROLLBACK|RQM|RTNLIST|SEEK|SELECT|SELECTE|SELECTINDEX|SELECTN|SELECTV|SETREM|SETTING|SLEEP|SSELECT|START|STATUS|STEP|STOP|STOPE|STOPM|SUBR|SUBROUTINE|SWAP|TCLREAD|THEN|TO|TRANSACTION|UDTEXECUTE|UNLOCK|UNTIL|UPRINT|USING|WEOFSEQ|WHILE|WITH|WORK|WRITE|WRITEBLK|WRITELIST|WRITESEQ|WRITESEQF|WRITEU|WRITEV|WRITEVU)(?![\\.\\$])\\b"
				},
				{
					"name": "constant.language",
					"match": "(?i)(\\s)(EQ|NE|GT|LT|GE|LE)(\\s)"
				},
				{
					"name": "support.class",
					"match": "(?i)(?<![\\w\\$\\.])(ABS|ABSS|ACCEPT.SOCKET.CONNECTION|ACCEPTCONNECTION|ACTIVEDIRECTORY|ADD.ACCOUNT|ADD.SQL.DATABASE|ADDAUTHENTICATIONRULE|ADDREQUESTPARAMETER|ADDS|ALPHA|ANDS|ASCII|ASSIGNED|BASE64DECODE|BASE64ENCODE|BITXOR|BUILDJSON|CACHE|CATALOGUED|CATS|CHANGE|CHAR|CHECKSUM|CLEARCACHE|CLOSESOCKET|COL1|COL2|COMPARE|CONVERT|COUNT|COUNTS|CREATE.FOLDER|CREATE.SERVER.SOCKET|CREATEREQUEST|CREATESECUREREQUEST|CREATESECURITYCONTEXT|DATE|DCOUNT|DELETE|DELETEPH|DELETEU|DIV|DIVS|DOWNCASE|DQUOTE|EBCDIC|EMAIL|ENCODE|ENCRYPT|EQS|EREPLACE|EXTRACT|FADD|FCORRELATIVE|FIELD|FIELDS|FIELDSTORE|FILE.COPY|FILE.DELETE|FILE.MOVE|FILEINFO|FIX|FMT|FMTS|FOLD|FUNNY|GETUSERNAME|GROUP|GTS|GUID|HELPME|ICONV|ICONVS|IFS|INDEX|INDICES|INITSERVERSOCKET|INLIST|INMAT|INSERT|INT|ISINDEX|ISNULL|ITYPE|KEY|KEYIN|LEFT|LEN|LENS|LISTREADF|LISTREADU|LISTU|LOCATE|LOWER|LTS|MATCHFIELD|MAX|MAXIMUM|MESSAGE|MINIMUM|MOD|MULS|NEG|NEGS|NOT|NUM|OCONV|OCONVS|OPEN.QUEUE|OPEN.SOCKET|PARSEBASIC|PARSEJSON|PARSESTRING|PASSWD|PATTERNMATCH|PCLTOPDF|PDFADDIMAGE|PDFOVERLAY|PDFPROTECT|PROCESS|PROTOCOLLOGGING|PWR|QUEUE.LENGTH|QUOTE|RAISE|RANDOMIZE|READ.QUEUE|READ.SOCKET|READSOCKET|RECORDLOCKED|REGEX|REMOVE|REPLACE|REUSE|RIGHT|RND|SELECTINFO|SENTENCE|SEQ|SET.SQLDATABASE|SETHTTPDEFAULT|SETREQUESTHEADER|SOCKET.ESTABLISHED|SOCKET.LISTENING|SPACE|SPACES|SPLICE|SQRT|SQUOTE|STACK.POP|STACK.PUSH|STATUS|STOREDPROCEDURE|STR|SUBMITREQUEST|SUBR|SUBS|SUBSTRINGS|SUM|SUMMATION|SYSTEM|TABLEADD|TABLECLEAR|TABLEFIND|TABLEGET|TABLEREMOVE|TIME|TIMEDATE|TRANS|TRIM|TRIMB|TRIMBS|TRIMF|TRIMS|UNASSIGNED|UPCASE|WRITE.QUEUE|WRITE.SOCKET|WRITESOCKET)(?![\\.\\$])\\b"
				},
				{
					"name": "comment.line.asterisk.mvon",
					"match": "(?i)(^|;)\\s*(\\*|!|REM\\s+?).*"
				},
				{
					"name": "comment.line.asterisk.mvon",
					"match": "(?<=[\\w]:|[0-9])\\s*(\\*|!|(?i)REM\\s+?).*"
				},
				{
					"name": "constant.language",
					"match": "(\\+|\\-|\\*|\\\\|=|:|#)"
				}
			]
		}
	},
	"scopeName": "source.mvbasic"
}